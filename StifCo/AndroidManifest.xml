<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.chamedu.stifco"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.chamedu.stifco.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.chamedu.stifco.Proposer"
            android:screenOrientation="portrait"
            android:label="@string/proposer" >
        </activity>
         <activity
            android:name="org.chamedu.stifco.Recherche"
            android:screenOrientation="portrait"
            android:label="@string/recherche" >
        </activity>
         <activity
            android:name="org.chamedu.stifco.Resultat"
            android:screenOrientation="portrait"
            android:label="@string/resultat" 
            >
        </activity>
        
    </application>

</manifest>